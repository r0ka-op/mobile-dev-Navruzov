<Window x:Class="kursach_wpf.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#290460">
        <TextBlock Text="Register" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" />

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="0,0,0,10">
            <TextBox Name="UsernameBox" Text="Username" FontSize="16" Margin="0,10,0,0" />
            <PasswordBox Name="PasswordBox" FontSize="16" Margin="0,10,0,0" />

            <Button Content="Register" FontSize="16" Height="40" Click="Register_Click" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
