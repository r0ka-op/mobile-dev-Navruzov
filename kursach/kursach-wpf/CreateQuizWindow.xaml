<Window x:Class="kursach_wpf.CreateQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать викторину" Height="600" Width="500" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Название викторины:"/>
            <TextBox x:Name="QuizTitleTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Вопрос:"/>
            <TextBox x:Name="QuestionTextBox" Margin="0,0,0,5"/>
            <Button Content="Выбрать изображение для вопроса" Click="SelectQuestionImage_Click" Margin="0,0,0,15"/>

            <TextBlock Text="Ответ 1:"/>
            <TextBox x:Name="Answer1TextBox" />
            <Button Content="Выбрать изображение" Click="SelectAnswerImage1_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Ответ 2:"/>
            <TextBox x:Name="Answer2TextBox" />
            <Button Content="Выбрать изображение" Click="SelectAnswerImage2_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Ответ 3:"/>
            <TextBox x:Name="Answer3TextBox" />
            <Button Content="Выбрать изображение" Click="SelectAnswerImage3_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Ответ 4:"/>
            <TextBox x:Name="Answer4TextBox" />
            <Button Content="Выбрать изображение" Click="SelectAnswerImage4_Click" Margin="0,0,0,15"/>

            <TextBlock Text="Правильный ответ (1-4):"/>
            <TextBox x:Name="CorrectAnswerTextBox" Margin="0,0,0,20" Width="50"/>

            <Button Content="Создать" Width="100" HorizontalAlignment="Center" Click="CreateButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
